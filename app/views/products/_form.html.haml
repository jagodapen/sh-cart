#form-container.bg-light.mx-5
  = form_for @product do |f|
    .row.m-2.py-4
      .col-12.col-sm-8
        #inputProductName= f.text_field :name, class: "form-control", placeholder: :name, disabled: @product.id.present?
      .col-12.col-sm-4
        #inputProductType= f.select :product_type, options_for_select(@product_types, f.object.product_type), {}, class: "form-select"
    .ps-4.pb-4
      = f.submit @product.id ? "Save" : "Create", class: "btn btn-dark me-2", type: "submit"
      = link_to "Show", @product, class: "btn btn-outline-dark" if @product.id
