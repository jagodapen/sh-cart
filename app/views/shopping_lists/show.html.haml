.bg-light.mx-5
  .d-flex.p-1
    .px-2.shc-icon{:class => @shopping_list.status=='pending' ? "pending-icon" : "done-icon"}
    .px-2= @shopping_list.shopping_day
    .px-2.flex-grow-1.text-center= @shopping_list.name
    .px-2.mx-2.edit-icon.shc-icon.position-relative= link_to "", edit_shopping_list_path(@shopping_list), class: "stretched-link"
    .px-2.mx-2.delete-icon.shc-icon.position-relative= link_to "", @shopping_list, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "stretched-link"
  %h4.my-3.text-center Products to buy:

.mx-5.my-2= link_to '<<< Back', shopping_lists_path, class: "text-dark text-decoration-none"
