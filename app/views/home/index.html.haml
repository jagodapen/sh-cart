%header.row.container-fluid.text-center
  -# logo
  .col-12.col-sm-6.mb-3
    .img-fluid= image_tag "shcart-logo.jpg", :height => 80
  -# household name
  .col-6.col-sm-3.mb-3
    .img-fluid= image_tag "house.svg", :width => 40
    %p.card-text myHouseName
  -# household members
  .col-6.col-sm-3.mb-3
    .img-fluid= image_tag "members.svg", :width => 40
    %p.card-text Members

.main-options.row.container-fluid
  - @cards.each do |name, src|
    = render 'home-card', :name => name, :src => src
