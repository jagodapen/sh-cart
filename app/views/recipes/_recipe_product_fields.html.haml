%tr.px-2
  %td.px-2= f.select :product_id, options_from_collection_for_select(all_products, :id, :name), {}, {class: "form-select"}
  %td.px-2= f.number_field :quantity, in: 1..1000, step: 1, class: "form-control"
  = f.hidden_field :_destroy
  %td.px-2= link_to "remove", '#', class: "remove_fields"
